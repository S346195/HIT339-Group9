@model s318344_Assignment1.Models.TutorModel

@{
    ViewData["Title"] = "Edit - " + Model.TutorName;
}

<div class=" bg-primary p-4" style="border-top-left-radius: 2em; border-top-right-radius: 2em;">

    <h1 class="text-white">Edit</h1>

    <h2 class="text-dark">@Html.DisplayFor(model => model.TutorName)</h2>

</div>



<div class="row d-flex justify-content-center p-3">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TutorId" />
            <div class="form-group">
                <label asp-for="TutorName" class="control-label"></label>
                <input asp-for="TutorName" class="form-control" />
                <span asp-validation-for="TutorName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-outline-dark" asp-action="Index">Back</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
