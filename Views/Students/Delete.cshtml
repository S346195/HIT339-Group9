@model Group9_Assignment2.Models.StudentModel

@{
    ViewData["Title"] = "Delete - Student";
}


<div class=" bg-primary p-4" style="border-top-left-radius: 2em; border-top-right-radius: 2em;">

    <h1 class="text-white">Delete</h1>

    <h2 class="text-dark"> Are you sure you want to delete this record? </h2>

</div>


