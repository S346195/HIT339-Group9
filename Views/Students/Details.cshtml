@model Group9_Assignment2.Models.StudentModel

@{
    ViewData["Title"] = "Details - " + Model.StudentFullName;
}



<div class=" bg-primary p-4" style="border-top-left-radius: 2em; border-top-right-radius: 2em;">

    <h1 class="text-white">Details</h1>
    <h2 class="text-dark"> @Html.DisplayFor(model => model.StudentFullName)</h2>

    <hr />

    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.StudentID">Edit</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model?.StudentID">Delete</a>
    <a class="btn btn-outline-light" asp-action="Index">Back</a>

</div>

<div class="container-fluid p-3">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StudentFirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentFirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StudentLastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentLastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DOB)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DOB)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gender.Gender)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GuardianName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GuardianName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentContactEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PaymentContactEmail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentContactNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PaymentContactNumber)
        </dd>
    </dl>
</div>
