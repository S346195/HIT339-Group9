<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/s318344_Assignment1.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />

        @if (IsSectionDefined("AddToHead"))
    {
        @RenderSection("AddToHead", required: false)
    }

</head>
<body class="">
    <header >
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">

            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CMYC</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex ">
                    <ul class="navbar-nav  flex-grow-1 justify-content-end">

                        <li class="nav-item ">
                            <a class="nav-link text-dark" asp-controller="Students" asp-action="Index">Students</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Lessons" asp-action="Index">Lessons</a>
                        </li>

                    </ul>

                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                            View tables
                        </button>

                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <li><a class="dropdown-item text-dark" asp-controller="Instruments" asp-action="Index">Instruments</a></li>
                            <li><a class="dropdown-item text-dark" asp-controller="Tutors" asp-action="Index">Tutors</a></li>
                            <li><a class="dropdown-item text-dark" asp-controller="Genders" asp-action="Index">Genders</a></li>
                            <li><a class="dropdown-item text-dark" asp-controller="LessonTypes" asp-action="Index">Lesson Types</a></li>

                        </ul>
                    </div>
                </div>



            </div>
        </nav>
    </header>


    <div class="container pb-4 pt-2">

        <main role="main" class="shadow overflow-hidden" style="border-radius: 2em;">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            Rhys Lewis s318344 - Assignment 1 - HIT339
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
