@model s318344_Assignment1.Models.LessonTypeModel

@{
    ViewData["Title"] = "Delete - lesson type";
}

<div class=" bg-primary p-4" style="border-top-left-radius: 2em; border-top-right-radius: 2em;">

    <h1 class="text-white">Delete</h1>

    <h2 class="text-dark"> Are you sure you want to delete this record? </h2>

</div>
<div class="row d-flex justify-content-center p-3">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LessonType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LessonType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LessonDuration)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LessonDuration)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LessonCost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LessonCost)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="LessonTypeId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-outline-dark" asp-action="Index">Back</a>
    </form>
</div>
