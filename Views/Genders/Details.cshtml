@model Group9_Assignment2.Models.GenderModel

@{
    ViewData["Title"] = "Details - Gender";
}

<div class=" bg-primary p-4" style="border-top-left-radius: 2em; border-top-right-radius: 2em;">

    <h1 class="text-white">Details</h1>
    <h2 class="text-dark"> @Html.DisplayFor(model => model.Gender)</h2>

    <hr />

    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.GenderId">Edit</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model?.GenderId">Delete</a>
    <a class="btn btn-outline-light" asp-action="Index">Back</a>

</div>

<div class="container-fluid p-3">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
    </dl>
</div>

